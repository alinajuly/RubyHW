<div class="col-auto">
  <%= turbo_frame_tag dom_id(product), class: "card text-bg-white", style: "width: 20rem" do %>
    <% if product.image.attached? %>
      <%= image_tag product.image.variant(:main), alt: product.name %>
    <% else %>
      <%= image_tag("no_image.jpeg", alt: 'No image') %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title text-center"><%= link_to product.name, product %></h5>
      <p class="card-price text-black"><%= number_to_currency(product.price) %></p>
      <%= button_to 'Add to cart', line_items_path(product_id: product.id), class: 'btn btn-warning text-end' %>
    </div>
  <% end %>
</div>

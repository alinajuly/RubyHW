<div class="container">
  <div class="row gy-5 d-flex justify-content-center align-items-center vh-100">
      <div class="col-auto">
        <div class="card text-bg-dark mb-3" style="max-width: 40rem">
          <% if @product.image.attached? %>
            <%= image_tag @product.image.variant(:main), alt: @product.name %>
          <% else %>
            <%= image_tag("no_image.jpeg", alt: 'No image') %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title text-center"><%= @product.name %></h5>
            <p class="card-text"><%= @product.description %></p>
            <p class="card-text"><%= @product.category.title %></p>
            <p class="card-price"><%= number_to_currency(@product.price) %></p>
            <%= render partial: 'products/product_quantity', locals: { product: product, line_item: current_cart.line_items.find { |line_item| line_item.product_id == product.id } } %>
          </div>
        </div>
        <%= link_to 'Back to products', products_path %>
      </div>
  </div>
</div>

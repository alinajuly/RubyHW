<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="/style/style.css?v=001" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" 
    crossorigin="anonymous">
    <title>Tamagotchi</title>
  </head>

  <body class="text-center">
    <div class="container">
      <strong><%= @pet.name %></strong>
      <div class="param-block">
        <div class="attributes">
          <label>Hunger</label>
          <div class="progress">
            <div class="progress-bar bg-warning text-center" role="progressbar" 
              style="width: <%= @pet.hunger %>%;"
              aria-valuenow="<%= @pet.hunger %>"
              aria-valuemin="0" aria-valuemax="100">
              <%= @pet.hunger %>
            </div>
          </div>
          <label>Thirst</label>
          <div class="progress">
            <div class="progress-bar bg-info text-center" role="progressbar"
                 style="width: <%= @pet.thirst %>%;"
                 aria-valuenow="<%= @pet.thirst %>"
                 aria-valuemin="0" aria-valuemax="100">
              <%= @pet.thirst %>
            </div>
          </div>
          <label>Joy</label>
          <div class="progress">
            <div class="progress-bar bg-success text-center" role="progressbar"
                 style="width: <%= @pet.joy %>%;"
                 aria-valuenow="<%= @pet.joy %>"
                 aria-valuemin="0" aria-valuemax="100">
              <%= @pet.joy %>
            </div>
          </div>
          <label>Love</label>
          <div class="progress">
            <div class="progress-bar bg-danger text-center" role="progressbar"
                 style="width: <%= @pet.love %>%;"
                 aria-valuenow="<%= @pet.love %>"
                 aria-valuemin="0" aria-valuemax="100">
              <%= @pet.love %>
            </div>
          </div>
          <label>Tired</label>
          <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
              aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" 
              style="width: <%= @pet.tired %>%;"
              aria-valuenow="<%= @pet.tired %>"
              aria-valuemin="0" aria-valuemax="100">
              <%= @pet.tired %>
            </div>
            </div>
          </div>
        </div>
      </div>

      <div class="img-wrapper">
        <img src="images/<%= @pet.image %>" alt="<%= @pet.name %>"/>
      </div>

      <div class="btn-toolbar" style="display: 'none'">
        <form method="post" action="update">
          <input type="hidden" id="joy" name="joy" value="<%= @pet.joy.to_i + 20 %>">
          <input type="hidden" id="thirst" name="thirst" value="<%= @pet.thirst.to_i - 10 %>">
          <input type="hidden" id="hunger" name="hunger" value="<%= @pet.hunger.to_i - 10 %>">
          <input type="hidden" id="tired" name="tired" value="<%= @pet.tired.to_i - 20 %>">
          <input type="hidden" id="image" name="image" value="play.jpg">
          <button type="submit" class="btn btn-outline-primary mr-2">Play</button>
        </form>

        <form method="post" action="update">
          <input type="hidden" id="hunger" name="hunger" value="<%= @pet.hunger.to_i + 20 %>">
          <input type="hidden" id="image" name="image" value="feed.jpg">
          <button type="submit" class="btn btn-outline-warning">Eat</button>
        </form>

        <form method="post" action="update">
          <input type="hidden" id="thirst" name="thirst" value="<%= @pet.thirst.to_i + 10 %>">
          <input type="hidden" id="image" name="image" value="drink.jpg">
          <button type="submit" class="btn btn-outline-info">Drink</button>
        </form>

        <form method="post" action="update">
          <input type="hidden" id="love" name="love" value="<%= @pet.love.to_i + 10 %>">
          <input type="hidden" id="image" name="image" value="hug.jpg">
          <button type="submit" class="btn btn-outline-danger">Hug</button>
        </form>

        <form method="post" action="update">
          <input type="hidden" id="tired" name="tired" value="<%= @pet.tired.to_i + 20 %>">
          <input type="hidden" id="thirst" name="thirst" value="<%= @pet.thirst.to_i - 20 %>">
          <input type="hidden" id="hunger" name="hunger" value="<%= @pet.hunger.to_i - 20 %>">
          <input type="hidden" id="love" name="love" value="<%= @pet.love.to_i - 10 %>">
          <input type="hidden" id="image" name="image" value="sleep.jpg">
          <button type="submit" class="btn btn-outline-dark">Sleep</button>
        </form>
      </div>
    </div>
    <!-- Bootstrap -->
    <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" 
    crossorigin="anonymous">
    </script>
  </body>
</html>
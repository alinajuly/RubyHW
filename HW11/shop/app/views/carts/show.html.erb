<h1>this is a cart</h1>

<% if current_cart.line_item.any? %>
  <table class="table">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% current_cart.line_item.each do |line_item| %>
      <tr>
        <td><%= image_tag image_url(line_item.product.image), width: 100, height: 100 %></td>
        <td><%= line_item.product.name %></td>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.price %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No items in the card</p>
<% end %>

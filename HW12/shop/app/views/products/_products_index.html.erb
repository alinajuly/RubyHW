<div class='container'>
   <div class='row g-5 d-flex justify-content-center align-items-center vh-100'>
     <% @products.each do |product| %>
       <div class='col-auto'>
         <div class='card text-bg-white' style='width: 18rem'>
           <img src=<%= product.image %> class="card-img-top" alt=<%= product.name %>>
           <div class='card-body'>
             <h5 class='card-title text-center'><%= link_to product.name, product %></h5>
             <p class='card-price text-black'><%= number_to_currency(product.price) %></p>
             <% if current_user %>
               <%= button_to 'Add to cart', line_items_path(product_id: product.id), class: 'btn btn-warning text-end' %>
             <% end %>
           </div>
         </div>
       </div>
     <% end %>
   </div>
</div>
